  Path: .
  Modules: Objsize
  CCOpt: -W -Wall -Wextra -g
  CSources:
    alloc.h, bitarray.h, c_objsize.c, util.h,
    ocamlsrc/byterun/gc.h, ocamlsrc/byterun/mlvalues.h,
